import sys
import os
import argparse
#from argparse import ArgumentParser

def main():
    parser= argparse.ArgumentParser()
    parser.add_argument("-v", "--verbose", help="Mostrar información de depuración", action="store_true")
    parser.parse_args()

if __name__ == "__main__":
    main()



